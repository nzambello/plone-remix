{
  "name": "remix-template-remix",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write app types",
    "lint:css": "stylelint \"app/*.css\"",
    "lint:js": "eslint app types",
    "lint": "npm run lint:js # if you have css && npm run lint:css",
    "build": "remix build",
    "dev": "remix dev",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/node": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "@remix-run/serve": "^1.4.0",
    "classnames": "2.3.1",
    "i18next": "21.9.2",
    "i18next-browser-languagedetector": "6.1.5",
    "i18next-fs-backend": "1.1.5",
    "i18next-http-backend": "1.4.4",
    "lodash.memoize": "4.1.2",
    "plone-restapi-client": "0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "11.18.6",
    "react-player": "2.11.0",
    "remix-i18next": "4.1.1",
    "tiny-invariant": "1.2.0",
    "tlds": "1.231.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.0",
    "@remix-run/eslint-config": "^1.4.0",
    "@types/i18next-fs-backend": "1.1.2",
    "@types/lodash.memoize": "4.1.7",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "8.3.4",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.1",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.10",
    "prettier": "2.7.1",
    "stylelint": "14.13.0",
    "stylelint-config-idiomatic-order": "9.0.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended": "9.0.0",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "tabWidth": 4,
          "printWidth": 120
        }
      },
      {
        "files": "*.json",
        "options": {
          "printWidth": 200
        }
      }
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node",
      "@remix-run/eslint-config/jest",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jest",
      "jsx-a11y"
    ],
    "settings": {
      "jest": {
        "version": 27
      }
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "trailingComma": "none"
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "engines": {
    "node": ">=14"
  }
}
